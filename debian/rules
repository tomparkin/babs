#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_build:

override_dh_auto_install:
	$(MAKE) EXEC_DESTDIR=$$(pwd)/debian/babs/usr/bin CONF_DESTDIR=$$(pwd)/debian/babs/etc/babs install

override_dh_auto_clean:
	$(MAKE) EXEC_DESTDIR=$$(pwd)/debian/babs/usr/bin CONF_DESTDIR=$$(pwd)/debian/babs/etc/babs clean
